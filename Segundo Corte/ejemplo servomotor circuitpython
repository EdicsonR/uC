import time

servo = servo.Servo(13)  # Define el pin al que est√° conectado el servo motor

while True:
  # Mueve el servo motor a 0 grados
  servo.angle = 0
  time.sleep(2)

  # Mueve el servo motor a 90 grados
  servo.angle = 90
  time.sleep(2)

  # Mueve el servo motor a 180 grados
  servo.angle = 180
  time.sleep(2)
