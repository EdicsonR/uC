def crear_matriz_identidad(n):
  """
  Funci칩n que crea una matriz identidad de tama침o n x n.

  Args:
    n (int): Tama침o de la matriz (filas y columnas).

  Returns:
    list of lists: Matriz identidad de tama침o n x n.
  """

  matriz_identidad = []
  for i in range(n):
    fila = []
    for j in range(n):
      if i == j:
        fila.append(1)
      else:
        fila.append(0)
    matriz_identidad.append(fila)
  return matriz_identidad

n = 4
matriz_identidad = crear_matriz_identidad(n)
print(matriz_identidad)
